<header class="navbar navbar-expand-lg fixed-top bg-light">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand pe-sm-3 d-flex align-items-center" do %>
      <span class="text-primary flex-shrink-0 me-2">
        <svg version="1.1" width="35" height="32" viewBox="0 0 36 33" xmlns="http://www.w3.org/2000/svg">
          <path fill="currentColor" d="M35.6,29c-1.1,3.4-5.4,4.4-7.9,1.9c-2.3-2.2-6.1-3.7-9.4-3.7c-3.1,0-7.5,1.8-10,4.1c-2.2,2-5.8,1.5-7.3-1.1c-1-1.8-1.2-4.1,0-6.2l0.6-1.1l0,0c0.6-0.7,4.4-5.2,12.5-5.7c0.5,1.8,2,3.1,3.9,3.1c2.2,0,4.1-1.9,4.1-4.2s-1.8-4.2-4.1-4.2c-2,0-3.6,1.4-4,3.3H7.7c-0.8,0-1.3-0.9-0.9-1.6l5.6-9.8c2.5-4.5,8.8-4.5,11.3,0L35.1,24C36,25.7,36.1,27.5,35.6,29z"></path>
        </svg>
      </span>
      <span class="fw-semibold">Queens of Bling</span>
    <% end %>

    <div class="form-check form-switch mode-switch order-lg-2 ms-auto me-3 me-lg-4" data-bs-toggle="mode">
      <input class="form-check-input" type="checkbox" id="theme-mode">
      <label class="form-check-label" for="theme-mode"><i class="ai-sun fs-lg"></i></label>
      <label class="form-check-label" for="theme-mode"><i class="ai-moon fs-lg"></i></label>
    </div>

    <%= link_to 'Start a project', new_inquiry_path, class: 'btn btn-sm btn-primary order-lg-3 d-none d-lg-inline-flex ms-3' %>

    <button class="navbar-toggler ms-sm-3" type="button" data-bs-toggle="collapse" data-bs-target="#primaryNav" aria-controls="primaryNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <nav class="collapse navbar-collapse" id="primaryNav">
      <ul class="navbar-nav ms-lg-4 me-auto">
        <li class="nav-item">
          <%= link_to 'Home', root_path, class: "nav-link#{' active' if current_page?(root_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to 'About', about_path, class: "nav-link#{' active' if current_page?(about_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Portfolio', gallery_path, class: "nav-link#{' active' if current_page?(gallery_path)}" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Testimonials', testimonials_path, class: "nav-link#{' active' if current_page?(testimonials_path)}" %>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle <%= 'active' if controller_name.in?(%w[inquiries model_applications reviews]) %>" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Work with us
          </a>
          <ul class="dropdown-menu shadow-sm">
            <li><%= link_to 'Project inquiry', new_inquiry_path, class: 'dropdown-item' %></li>
            <li><%= link_to 'Model application', new_model_application_path, class: 'dropdown-item' %></li>
            <li><%= link_to 'Submit a review', new_review_path, class: 'dropdown-item' %></li>
          </ul>
        </li>
        <li class="nav-item">
          <%= link_to 'Contact', new_inquiry_path, class: "nav-link#{' active' if current_page?(new_inquiry_path)}" %>
        </li>
      </ul>

      <div class="d-lg-none pt-3 border-top">
        <%= link_to 'Start a project', new_inquiry_path, class: 'btn btn-primary w-100 mb-3' %>
        <%= link_to 'Model application', new_model_application_path, class: 'btn btn-outline-primary w-100' %>
      </div>
    </nav>
  </div>
</header>
