<header class="header header-sticky mb-4">
  <div class="container-fluid">
    <button class="header-toggler px-md-0 me-md-3" type="button" data-coreui-toggle="sidebar">
      <svg class="icon icon-lg">
        <use xlink:href="https://cdn.jsdelivr.net/npm/@coreui/icons@3.0.0/sprites/free.svg#cil-menu"></use>
      </svg>
    </button>
    <span class="fs-5 fw-semibold d-none d-md-inline">Kidd Custom Apparel</span>
    <div class="form-check form-switch mode-switch ms-auto me-3" data-bs-toggle="mode">
      <input class="form-check-input" type="checkbox" id="admin-theme-mode">
      <label class="form-check-label d-inline-flex align-items-center" for="admin-theme-mode">
        <svg class="icon">
          <use xlink:href="https://cdn.jsdelivr.net/npm/@coreui/icons@3.0.0/sprites/free.svg#cil-sun"></use>
        </svg>
      </label>
      <label class="form-check-label d-inline-flex align-items-center" for="admin-theme-mode">
        <svg class="icon">
          <use xlink:href="https://cdn.jsdelivr.net/npm/@coreui/icons@3.0.0/sprites/free.svg#cil-moon"></use>
        </svg>
      </label>
    </div>
    <ul class="header-nav me-4">
      <li class="nav-item dropdown">
        <a class="nav-link py-0 d-flex align-items-center gap-2" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
          <span class="avatar avatar-md bg-primary bg-opacity-75 text-white fw-semibold">
            <%= current_admin.email.first.upcase %>
          </span>
          <svg class="icon">
            <use xlink:href="https://cdn.jsdelivr.net/npm/@coreui/icons@3.0.0/sprites/free.svg#cil-caret-bottom"></use>
          </svg>
        </a>
        <div class="dropdown-menu dropdown-menu-end pt-0">
          <div class="dropdown-header bg-body-secondary fw-semibold py-2">Account</div>
          <span class="dropdown-item-text text-muted px-3"><%= current_admin.email %></span>
          <div class="dropdown-divider my-1"></div>
          <%= link_to destroy_admin_session_path, data: { turbo_method: :delete }, class: "dropdown-item d-flex align-items-center gap-2" do %>
            <svg class="icon">
              <use xlink:href="https://cdn.jsdelivr.net/npm/@coreui/icons@3.0.0/sprites/free.svg#cil-account-logout"></use>
            </svg>
            Sign out
          <% end %>
        </div>
      </li>
    </ul>
  </div>
  <div class="header-divider"></div>
  <div class="container-fluid">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb my-0 ms-2">
        <li class="breadcrumb-item">Admin</li>
        <% if content_for?(:breadcrumb) %>
          <%= yield :breadcrumb %>
        <% else %>
          <li class="breadcrumb-item active text-muted" aria-current="page">Dashboard</li>
        <% end %>
      </ol>
    </nav>
  </div>
</header>
